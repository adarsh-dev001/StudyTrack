
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /anonymousProfiles/{anonId} {
      // Allow anyone to create an anonymous profile.
      allow create: if true;
      // Allow an authenticated user to read and delete a specific anonymous profile (for migration).
      allow read, delete: if request.auth != null;
      // Generally, disallow updates to anonymous profiles by anonymous users after creation.
      allow update: if false;
    }

    match /users/{userId}/userProfile/{profileDocId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/plannerTasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/streaksData/{streakDocId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access to other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
